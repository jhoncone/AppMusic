<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.loginactivi"
    android:background="@drawable/fon">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="44dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/imags" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="23dp"
        android:background="#C6FF00"
        android:text="Usuario"
        app:layout_constraintBottom_toTopOf="@+id/e_user"
        app:layout_constraintStart_toStartOf="@+id/e_user" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:background="#C6FF00"
        android:text="ContraseÃ±a"
        app:layout_constraintStart_toStartOf="@+id/e_user"
        app:layout_constraintTop_toBottomOf="@+id/e_user" />

    <EditText
        android:id="@+id/e_user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="408dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/input_field"
        android:ems="10"
        android:hint="Email_user"
        android:inputType="textPersonName"
        android:textColorHint="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/epassword"
        app:layout_constraintEnd_toEndOf="@+id/epassword"
        app:layout_constraintStart_toStartOf="@+id/epassword"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/epassword"
        android:layout_width="300dp"
        android:layout_height="0dp"

        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginBottom="151dp"
        android:background="@drawable/input_field"
        android:ems="10"
        android:hint="Email_Password"
        android:inputType="textPassword"
        android:textColorHint="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e_user" />

    <Button
        android:id="@+id/btnLogi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="54dp"
        android:text="Login"
        android:textAllCaps="false"
        android:background="@drawable/botton"
        app:layout_constraintStart_toStartOf="@+id/epassword"
        app:layout_constraintTop_toBottomOf="@+id/epassword" />

    <Button
        android:id="@+id/btnRegis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="52dp"
        android:text="Register"
        android:textAllCaps="false"
        android:background="@drawable/botton"
        app:layout_constraintStart_toStartOf="@+id/epassword"
        app:layout_constraintTop_toBottomOf="@+id/epassword" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="134dp"
        android:layout_height="61dp"
        android:layout_marginTop="64dp"
        android:text="INICIAR"
        android:textColor="#6600ff"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>